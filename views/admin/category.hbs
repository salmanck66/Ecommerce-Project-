<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="updateCategoryForm" action="" method="post" >
                    <div class="mb-3">
                        <label for="updateCategoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="updateCategoryName" name="updateCategoryName" placeholder="Enter category name">
                    </div>
                    <div class="mb-3">
                        <label for="updateCategoryImage" class="form-label">Category Image</label>
                        <input type="file" class="form-control" id="updateCategoryImage" name="updateCategoryImage">
                    </div>
                    <input type="hidden" id="categoryId">
                </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="updateCategory()">Update</button>
      </div>
    </div>
  </div>
</div>


<!-- CATEGORY MANAGEMENT SECTION -->
<script>
    async function deleteCat(catId) {
        console.log("fun called");
        event.preventDefault();

        Swal.fire({
            title: `Do you want to delete category ?`,
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: "Yes",
            denyButtonText: `No`
        }).then(async (result) => {
            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/category/${catId}`, {
                        method: 'DELETE'
                    });

                    if (response.ok) {
                            location.reload();
                    } else {
                        // Handle error responses
                        console.error('Error deleting category:', response.statusText);
                        // Display an error message to the user
                        alert('Failed to delete category. Please try again.');
                    }
                } catch (error) {
                    console.error('Error deleting category:', error);
                    // Display an error message to the user
                    alert('An unexpected error occurred. Please try again later.');
                }
            }
        });
    }
    function updateCategory() {
    // Get the values from the form fields
    const categoryId = document.getElementById('categoryId').value;
    const categoryName = document.getElementById('updateCategoryName').value;
    const categoryImage = document.getElementById('updateCategoryImage').files[0]; // Assuming single file upload

    // Create a FormData object to send data to the server
    const formData = new FormData();
    formData.append('categoryName', categoryName);
    formData.append('categoryImage', categoryImage);

    // Make a fetch request to update the category
    fetch(`/category/${categoryId}`, {
        method: 'PUT',
        body: formData
    })
    .then(response => {
        if (response.ok) {
            // Category updated successfully, reload the page or perform any other action
            location.reload();
        } else {
            // Handle error responses
            console.error('Error updating category:', response.statusText);
            // Display an error message to the user
            alert('Failed to update category. Please try again.');
        }
    })
    .catch(error => {
        console.error('Error updating category:', error);
        // Display an error message to the user
        alert('An unexpected error occurred. Please try again later.');
    });
}



</script>
