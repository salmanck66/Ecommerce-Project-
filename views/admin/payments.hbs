<!-- PAYMENT SECTION -->
<section class="container payment-section mt-5">
    <h2 class="mb-4">Sales Report</h2>

    <!-- Download Button -->
    <button id="downloadSalesReport" class="btn btn-primary mb-3">Download Sales Report</button>

    <!-- All Payments -->
    <div class="all-payments">
        <h3>Sales</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">OrderID</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Date</th>
                    <th scope="col">Mode</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample payment rows -->
                {{#each order}}
                <tr>
                    <th scope="row">{{this.orderId}}</th>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.orderDate}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>Success</td>
                </tr>
                {{/each}}
                <!-- Add more payment rows as needed -->
            </tbody>
        </table>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<!-- PAYMENT OPTIONS SECTION -->
<script>
    allSideMenu.forEach(item=> {
	const li = item.parentElement;

	item.addEventListener('click', function () {
		allSideMenu.forEach(i=> {
			i.parentElement.classList.remove('active');
		})
		li.classList.add('active');
	})
});

// JavaScript for handling download button click

</script>
