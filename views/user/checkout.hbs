    });
        function validateForm() {
            const firstName = $('#firstName').val().trim();
            console.log(firstName)
            const lastName = $('#lastName').val().trim();
            console.log(lastName)
            const email = $('#email').val().trim();
            console.log(email)
            const phno = $('#number').val().trim();
            console.log(phno)
            const address = $('#address').val().trim();
            console.log(address)
            const zip = $('#zip').val().trim();
            console.log(zip)
            const state = $('#state').val();
            console.log(state)
            

            let isValid = true;

            // Validate first name
            if (firstName === '' )  {
                isValid = false;
                $('#firstName').next('.invalid-feedbacks').text('First name should not be empty');
            } else if (!isValidName(firstName)) {
                isValid = false;
                $('#firstName').next('.invalid-feedbacks').text('First name should not contain numbers and be less than 15 characters.');
            } else {
                $('#firstName').next('.invalid-feedbacks').text('');
            }
            if (lastName === '' )  {
                isValid = false;
                $('.invalid-feedbackd').text('Last name should not be empty');
            } else if (!isValidName(lastName)) {
                isValid = false;
                $('.invalid-feedbackd').text('Last name should not contain numbers and be less than 15 characters.');
            } else {
                $('.invalid-feedbackd').text('');
            }

            // Validate email
            if (email === '' || !isValidEmail(email)) {
                isValid = false;
                $('.invalid-feedbacke').text('Please enter a valid email address.');
            } else {
                $('.invalid-feedbacke').text('');
            }

            if (phno === '' || ! isValidNumber(phno) ) {
                isValid = false;
                $('.invalid-feedbackdd').text('Please enter a valid phone number ');
            } else {
                $('.invalid-feedbackdd').text('');
            }

            // Validate address
            if (address === '' && address.length  < 10) {
                isValid = false;
                $('.invalid-feedbackv').text('Address is required.');
            } else {
                $('.invalid-feedbackv').text('');
            }

            // Validate zip code
             if (zip === '') {
        isValid = false;
        $('.invalid-feedbacksda').text('Zip code is required.');
    } else if (zip.length !== 6) {
        isValid = false;
        $('.invalid-feedbacksda').text('Zip code should be 6 digits');
    } else if (isNaN(zip)) {
        isValid = false;
        $('.invalid-feedbacksda').text('Zip code should be digits');
    } else {
        $('.invalid-feedbacksda').text('');
    }
        if (state === '') {
        isValid = false;
        $('.invalid-feedbacksav').text('Please select a state.'); // Display error message for state selection
    } else {
        $('.invalid-feedbacksav').text(''); // Clear error message if state is selected
    }

            return isValid;
        }
                function isValidName(name) {
            const nameRegex = /^[a-zA-Z\s]*$/;
            return nameRegex.test(name) && name.length < 10;
        }
        function isValidNumber(phoneNumber) {
         const phoneRegex = /^\d{10}$/;
        return phoneRegex.test(phoneNumber);
        }

        // Function to validate email format
        function isValidEmail(email) {
            // Regular expression for email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        // Event listeners for input fields
        $('#firstName, #lastName, #email, #address, #zip,#number').on('input', function() {
            validateForm();
        });

        // Event listener for form submission
        $('form').on('submit', function(event) {
    // Prevent form submission if validation fails
    if (!validateForm() || !$(this).attr('id') === 'payment-form') {
        event.preventDefault();
    }
});

            function showToast(message, type) {
            Toastify({
                text: message,
                duration: 3000,
                close: true,
                gravity: "bottom", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                backgroundColor: type === "error" ? "#ff0000" : "#33cc33",
            }).showToast();
        }

    function payNow(amount) {
    console.log(amount);
    if (!validateForm()) {
    event.preventDefault();
    return showToast("Please fill form correctly", "error")
    }
    var formData = {
        amount: amount
    };
    $.ajax({
        url: "/payment",
        method:"POST",
        data: formData,
        success: function (data) {
            var options = {
                key: data.key_id,
                amount: data.amount,
                currency: "INR",
                order_id: data.order_id,
                handler: function (response) {
                document.getElementById('payment-form').submit();
                }
            };
            var razorpayObject = new Razorpay(options);
            razorpayObject.on('payment.failed', function (response) {
                alert("Payment Failed");
            });
            razorpayObject.open();
        },
        error: function (err) {
            alert("Error occurred: " + JSON.stringify(err));
        }
    });
}

</script>
