<script>
    $(document).ready(function() {
            function disableInputFields() {
        $('#firstName, #lastName, #email, #address, #address2, #state, #zip, #number').prop('disabled', true);
        $('input[type="radio"]').prop('disabled', false); // Enable payment method radios
    }
        function enableInputFields() {
        $('#firstName, #lastName, #email, #address, #address2, #state, #zip, #number').prop('disabled', false);
    }
     $(document).on('click', '.btn-adress', function(event) {
    event.preventDefault();
    
    // Extract address details from the card
    var firstName = $(this).closest('.card').find('.card-title').text().trim().split(' ')[0];
        var lastName = $(this).closest('.card').find('.card-title').text().trim().split(' ')[1];
        var email = $(this).closest('.card').find('.card-text:eq(0)').text().trim().split(': ')[1];
        var phoneNumber = $(this).closest('.card').find('.card-text:eq(1)').text().trim().split(': ')[1];
        var address = $(this).closest('.card').find('.card-text:eq(2)').text().trim().split(': ')[1];
        var address2 = $(this).closest('.card').find('.card-text:eq(3)').text().trim().split(': ')[1];
        var state = $(this).closest('.card').find('.card-text:eq(4)').text().trim().split(': ')[1];
        var zip = $(this).closest('.card').find('.card-text:eq(5)').text().trim().split(': ')[1];

        // Set values in input fields
        $('#firstName').val(firstName);
        $('#lastName').val(lastName);
        $('#email').val(email);
        $('#number').val(phoneNumber);
        $('#address').val(address);
        $('#address2').val(address2);
        $('#state').val(state);
        $('#zip').val(zip);
    
    // Hide the "Save Shipping Address" checkbox
    $(".save").hide();
});
        
        $('.btn-pay-now').hide();
        function togglePayNowButton() {
        if ($('#Online').is(":checked")) {
            $('.btn-COD').hide();
            $('.btn-pay-now').show();
// Disable the "Continue to checkout" button
        } else 
        if($('#COD').is(":checked"))
        {
                $('.btn-pay-now').hide();
                $('.btn-COD').show();
                $('.btnsubmit').prop('disabled', false); // Enable the "Continue to checkout" button
        }
        
    }
        togglePayNowButton();
        $("#Online,#COD").on('change', function(event) {
        togglePayNowButton();
    });

        // Function to validate the form



