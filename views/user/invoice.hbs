<style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .dsds {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin: 50px;
            text-align: center;

        }

        h1 {
            color: #343a40;
            margin-bottom: 30px;
            margin-top: 10vh;
        }

        .btn-dark {
            background-color: #171718;
            border: none;
            border-radius: 20px;
            margin-top: 10vh;
            padding: 10px 30px;
        }

        .btn-dark:hover {
            background-color: #5c5d5e;
        }
    </style>

<div class="container" style="margin-top: 20vh; margin-bottom: 20vh;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Invoice</h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
                <h6>Invoice Date:</h6>
              <h5>From:</h5>
              <address>
                Your Company Name<br>
                Address Line 1<br>
                Address Line 2<br>
                City, State, Zip<br>
                Country
              </address>
            </div>
            <div class="col-md-6 text-right">
              <h5>To:</h5>
              <address>
                Customer Name<br>
                Address Line 1<br>
                Address Line 2<br>
                City, State, Zip<br>
                Country
              </address>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Item</th>
                  <th>Quantity</th>
                  <th>Unit Price</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <!-- Example row, you can dynamically generate rows for each item in your order -->
                <tr>
                  <td>Product Name</td>
                  <td>2</td>
                  <td>$20.00</td>
                  <td>$40.00</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="row justify-content-end">
            <div class="col-md-4">
              <table class="table table-bordered">
                <tbody>
                  <tr>
                    <td><strong>Subtotal</strong></td>
                    <td>$40.00</td>
                  </tr>
                  <tr>
                    <td><strong>Tax (10%)</strong></td>
                    <td>$4.00</td>
                  </tr>
                  <tr>
                    <td><strong>Total</strong></td>
                    <td>$44.00</td>
                  </tr>
                </tbody>
              </table>
              
            </div>
            
          </div>

        </div>
      </div>
    </div>
  </div>
</div>