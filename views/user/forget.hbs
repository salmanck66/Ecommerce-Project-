<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jcclub Admin| Forget Password</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.3/components/logins/login-6/assets/css/login-6.css">
    <style>
        .hjk {
            height: 10vh;
        }
    </style>
</head>
<body>
    <section class="m-5 pb-md-5 p-xl-5  ">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-6">
                    <div class="card border-0 shadow-lg rounded-4">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-3">
                                        <h3>Recover Account</h3>
                                    </div>
                                </div>
                            </div>
                            <form action="#!">
                                <div class="row gy-1 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                            <label for="email" class="form-label">Email</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                                            <label for="password" class="form-label">Password</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required>
                                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" name="otp" id="otp" placeholder="OTP">
                                            <label for="otp" class="form-label">OTP</label>
                                            <button id="generateBtn" class="btn btn-sm btn-primary" onclick="generateOTP()" type="button" >Generate OTP</button>
                                        </div>
                                        <div id="timer" style="display:none;">
                                            <p>OTP will expire in <span id="countdown">60</span> seconds</p>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn bsb-btn-2xl btn-primary" type="submit" id="resetPasswordBtn" disabled>Reset Password</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function enableGenerateButton() {
            var email = document.getElementById('email').value;
            var password = document.getElementById('password').value;
            var confirmPassword = document.getElementById('confirmPassword').value;
            var generateBtn = document.getElementById('generateBtn');

            if (email !== "" && password !== "" && confirmPassword !== "" && password === confirmPassword) {
                generateBtn.removeAttribute('disabled');
            } else {
                generateBtn.setAttribute('disabled', 'disabled');
            }
        }

        function generateOTP() {
            // Hide the generate button
            var generateBtn = document.getElementById('generateBtn');
            generateBtn.style.display = 'none';

            // Show the timer
            var timer = document.getElementById('timer');
            timer.style.display = 'block';
            document.getElementById('resetPasswordBtn').removeAttribute("disabled")

            // Start the countdown
            var seconds = 60;
            var countdownElement = document.getElementById('countdown');
            var countdownInterval = setInterval(function () {
                seconds--;
                countdownElement.textContent = seconds;
                if (seconds <= 0) {
                    clearInterval(countdownInterval);
                    timer.style.display = 'none';
                    generateBtn.style.display = 'block'
                    enableGenerateButton(); // Enable the Generate OTP button again
                    countdownElement.textContent = '60';
                }
            }, 1000);
        }

        document.getElementById('email').addEventListener('input', enableGenerateButton);
        document.getElementById('password').addEventListener('input', enableGenerateButton);
        document.getElementById('confirmPassword').addEventListener('input', enableGenerateButton);
    </script>
</body>
</html>
