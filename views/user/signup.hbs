<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jcclub | Signup</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.3/components/logins/login-6/assets/css/login-6.css">
    <style>
        body {
            background-size: cover;
        }
        .hjk {
            height: 10vh;
            background-color: aqua;
        }
    </style>
</head>
<body>
    <section class="m-5 pb-md-5 p-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-6">
                    <div class="card border-0 shadow-lg rounded-4">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="row">
                                <div class="col-12 align-content-center text-center">
                                    <div class="mb-5">
                                        <h3>Create Account</h3>
                                    </div>
                                </div>
                            </div>
                            <form action="signup" method="post" onsubmit="return validateForm()">
                                <div class="row gy-1 overflow-hidden">
                                    <div class="col-6">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" name="firstName" id="firstName" placeholder="firstName" required>
                                            <label for="firstName" class="form-label">First Name</label>
                                        </div>
                                        <p id="errorFirstName" style="color: red;"></p>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" name="lastName" id="lastName" placeholder="lastName" required>
                                            <label for="lastName" class="form-label">Last Name</label>
                                        </div>
                                        <p id="errorLastName" style="color: red;"></p>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" name="mail" id="mail" placeholder="Optional">
                                            <label for="mail" class="form-label">Email</label>
                                        </div>
                                         {{#if mailExist}}
                                        <p style="color: red;">{{mailError}}</p>
                                        {{/if}}
                                        <p id="errorMail" style="color: red;"></p>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="tel" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="Phone Number" required>
                                            <label for="phoneNumber" class="form-label">Phone Number</label>
                                        </div>
                                        <p id="errorPhoneNumber" style="color: red;"></p>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" name="password" id="password" placeholder="E" required>
                                            <label for="password" class="form-label">Password</label>
                                        </div>
                                        <p id="errorPassword" style="color: red;"></p>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <a class="text-decoration-non" href="/login"><p class=" link-secondary text-decoration-none">Already having account?</p></a>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn bsb-btn-2xl btn-dark" type="submit">Signup</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function validateForm() {
            var firstName = document.getElementById("firstName").value;
            var lastName = document.getElementById("lastName").value;
            var mail = document.getElementById("mail").value;
            var phoneNumber = document.getElementById("phoneNumber").value;
            var password = document.getElementById("password").value;

            var isValid = true;

            // Regular expression for checking if the input consists only of characters
            var charRegex = /^[a-zA-Z]+$/;

            if (!charRegex.test(firstName)) {
                document.getElementById("errorFirstName").innerText = "First name must contain only characters.";
                isValid = false;
            } else {
                document.getElementById("errorFirstName").innerText = "";
            }

            if (!charRegex.test(lastName)) {
                document.getElementById("errorLastName").innerText = "Last name must contain only characters.";
                isValid = false;
            } else {
                document.getElementById("errorLastName").innerText = "";
            }

            // Email validation can be more complex, but here we'll just check if it's not empty
            if (mail === "") {
                document.getElementById("errorMail").innerText = "Please enter your email.";
                isValid = false;
            } else {
                document.getElementById("errorMail").innerText = "";
            }

            if (phoneNumber.length !== 10 || isNaN(phoneNumber)) {
                document.getElementById("errorPhoneNumber").innerText = "Phone number must be exactly 10 digits.";
                isValid = false;
            } else {
                document.getElementById("errorPhoneNumber").innerText = "";
            }

            if (password.length < 6) {
                document.getElementById("errorPassword").innerText = "Password must be at least 6 characters long.";
                isValid = false;
            } else {
                document.getElementById("errorPassword").innerText = "";
            }

            return isValid;
        }
    </script>
</body>
</html>
