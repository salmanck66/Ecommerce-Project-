<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jcclub | Login with OTP</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.3/components/logins/login-6/assets/css/login-6.css">
    <style>
 body {
            background-size: cover;
            background-color: rgb(207, 215, 223);
        }

        .hjk {
            height: 10vh;
            background-color: aqua;
        }
    </style>
</head>
<body>
    <section  class=" pb-md-5 ">
        <div style="margin-top: 16vh;" class="container">
            <div class="row justify-content-center">
                <div class="col-9 col-md-9 col-lg-5 col-xl-5 col-xxl-5">
                    <div class="card border-0 shadow-lg rounded-4">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                                                        <div class="align align-items-end d-flex justify-content-end">
                            <a href="/login"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
                            </svg>
                            </a>
                            </div>
<div class="row">
                                <div class="col-12 text-center">
                                    <div class="mb-5">
                                        <h5 style="font-family:Georgia, 'Times New Roman', Times, serif ;">Login With Mail</h5>
                                    </div>
                                </div>
                            </div>
                            <form action="/login" method="post" onsubmit="return validateForm()">
                                <div class="row gy-1 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" name="mail" id="mail" placeholder="name@example.com" required>
                                            <label for="mail" class="form-label">Email</label>
                                        </div> 
                                        <p id="mailError" style="font-size: .8rem;" class="text-danger" hidden>{{mailError}}</p>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" name="password" id="password" value="" placeholder="password" required>
                                            <label for="password" class="form-label">Password</label>
                                        </div>
                                        <p id="passwordError" style="color: red;" class="text-danger" hidden>{{passwordError}}</p> <!-- Error message for password -->
                                    </div>

                                    <div class="col-12 mb-4">
                                        <div class="d-grid">
                                            <button class="btn bsb-btn-lg btn-dark" type="submit">Login</button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>

    $(document).ready(function() {
        
        // Function to show toast notifications
        function showToast(message, type) {
            Toastify({
                text: message,
                duration: 3000,
                close: true,
                gravity: "bottom", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                backgroundColor: type === "error" ? "##FF0000" : "#33cc33",
            }).showToast();
        }

        // Check if there are any error messages on page load and show toast notifications accordingly
        var mailError = $("#mailError").text();
        var passwordError = $("#passwordError").text();
        if (mailError) {
            showToast(mailError, "error");
        }
        if (passwordError) {
            showToast(passwordError, "error");
        }

        // Clear error messages when typing in input fields
        $("#mail").on("input", function() {
            $("#mailError").text("");
        });
        $("#password").on("input", function() {
            $("#passwordError").text("");
        });
    });


</script>


</body>
</html>
