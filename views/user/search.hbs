
<div style="margin-bottom: 100vh; margin-top: 14vh;" class="container">
  <div class="input-group mb-3">
    <input type="text" class="form-control" id="searchInput" placeholder="Search products">
    <div class="input-group-append">
      <button class="btn btn-outline-secondary" type="button" id="searchButton">Search</button>
    </div>
  </div>
  <div id="productsList" class="row"></div>
</div>

<!-- Bootstrap JS and jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Axios CDN -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  // Function to search for products
  function searchProducts() {
    const searchQuery = document.getElementById('searchInput').value.trim();
    console.log(searchQuery)
    // Send an Axios POST request to your backend server to search for products
    axios.post('/searchproduct', { query: searchQuery })
      .then(response => {
        // Clear previous search results
        document.getElementById('productsList').innerHTML = '';
        // Display search results
        response.data.forEach(product => {
          const productHTML = `
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">${product.name}</h5>
                  <p class="card-text">${product.description}</p>
                </div>
              </div>
            </div>
          `;
          document.getElementById('productsList').innerHTML += productHTML;
        });
      })
      .catch(error => {
        console.error('Error searching for products:', error);
      });
  }

  // Add event listener to the search button
  document.getElementById('searchButton').addEventListener('click', searchProducts);
</script>
